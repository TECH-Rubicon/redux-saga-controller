{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "declarationDir": "./types",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src", "rollup.config.ts"],
  "exclude": ["node_modules", "lib", "test", "es"]
}
